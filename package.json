{
  "name": "cf-saturn",
  "version": "0.0.1",
  "description": "Wiki-like static content generator",
  "main": "dist/lib/main.js",
  "types": "dist/lib/main.d.ts",
  "author": "Mgen (https://www.mgenware.com)",
  "homepage": "https://github.com/mgenware/cf-saturn",
  "bugs": "https://github.com/mgenware/cf-saturn/issues",
  "keywords": [
    "static site"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/cf-saturn.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bluebird": "^3.5.16",
    "@types/mocha": "*",
    "@types/node": "*",
    "copyfiles": "^1.2.0",
    "mocha": "*",
    "typescript": "*"
  },
  "scripts": {
    "test": "yarn run lint && yarn run compile && yarn run copy && mocha \"dist/test/*.js\"",
